{
  "name": "@asciified/backend",
  "version": "1.0.0",
  "description": "ASCII Art API with a good-looking Web App.",
  "main": "dist/app.js",
  "repository": "https://github.com/thelicato/asciified",
  "author": "Angelo Delicato <delicato.angelo@gmail.com>",
  "license": "GPL-3.0",
  "scripts": {
    "start": "node dist/app.js",
    "start:prod": "NODE_ENV=production node dist/app.js",
    "build": "tsc --project tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "dev": "npx kill-port 4200 && NODE_PATH=./src nodemon --delay 500ms --signal SIGTERM src/app.ts localhost 4200",
    "test": "jest",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "prettier": "prettier src --check",
    "prettier:fix": "prettier src --check --write",
    "format": "prettier src --check --write && eslint src --fix"
  },
  "dependencies": {
    "@koa/router": "^10.1.1",
    "figlet": "^1.5.2",
    "koa": "^2.13.4",
    "koa-mount": "^4.0.0",
    "koa-qs": "^3.0.0",
    "koa-static": "^5.0.0"
  },
  "devDependencies": {
    "@types/figlet": "^1.5.6",
    "@types/koa": "^2.13.6",
    "@types/koa-mount": "^4.0.2",
    "@types/koa-qs": "^2.0.0",
    "@types/koa-static": "^4.0.2",
    "@types/koa__router": "^12.0.0",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "lint-staged": "^13.1.2",
    "mocha": "^10.1.0",
    "nodemon": "^2.0.21",
    "prettier": "^2.8.4",
    "supertest": "^6.3.1",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.4",
    "typescript": "^4.8.4"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix"
    ],
    "*.{json,js,ts}": [
      "prettier --write"
    ]
  }
}
